. {
    cache 30
    loop
    reload 5s
    loadbalance
    health {
        lameduck 5s
    }
    prometheus :9153
    log
    errors
    header {
        response set ra
    }
}

socialdevs.site {
    hosts {
        # Subdominios de gestión internos (solo LAN)
        192.168.0.33 traefik.socialdevs.site
        192.168.0.33 grafana.socialdevs.site
        192.168.0.33 prometheus.socialdevs.site
        192.168.0.33 argocd.socialdevs.site
        192.168.0.33 jenkins.socialdevs.site
        192.168.0.33 nginx.socialdevs.site
        192.168.0.33 longhorn.socialdevs.site

        # Dominios públicos pero resueltos localmente
        192.168.0.33 socialdevs.site
        192.168.0.33 public.socialdevs.site
    }
    log
    errors
}