. {
    hosts {
        {% for record in dns_records %}
        {{ record.ip }} {{ record.name }}.{{ domain_name }} {{ record.name }}
        {% endfor %}

        # VIP para Ingress Web (Traefik)
        {{ ingress_vip }} socialdevs.site
        {{ ingress_vip }} home.socialdevs.site

        # Subdominios expuestos por Traefik (Ingress)
        {{ ingress_vip }} traefik.cefaslocalserver.com
        {{ ingress_vip }} grafana.socialdevs.site
        {{ ingress_vip }} prometheus.socialdevs.site
        {{ ingress_vip }} argocd.socialdevs.site
        {{ ingress_vip }} jenkins.socialdevs.site
        {{ ingress_vip }} nginx.socialdevs.site
        {{ ingress_vip }} longhorn.socialdevs.site

        # Subdominio para API Kubernetes
        {{ k8s_api_vip }} k3s-api.socialdevs.site

        fallthrough
    }

    forward . 8.8.8.8 8.8.4.4 {
        max_concurrent 1000
    }

    cache 30
    loop
    reload 5s
    loadbalance

    health {
        lameduck 5
    }

    prometheus :9153
    log
    errors
}
