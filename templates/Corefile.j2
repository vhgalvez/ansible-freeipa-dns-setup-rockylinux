. {
    hosts {
        {% for record in dns_records %}
        {{ record.ip }} {{ record.name }}.{{ domain_name }} {{ record.name }}
        {% endfor %}

        # Ingress principal (VIP 10.17.5.30)
        10.17.5.30 socialdevs.site
        10.17.5.30 home.socialdevs.site

        # Subdominios expuestos por Traefik (Ingress)
        10.17.5.30 traefik.cefaslocalserver.com
        10.17.5.30 grafana.socialdevs.site
        10.17.5.30 prometheus.socialdevs.site
        10.17.5.30 argocd.socialdevs.site
        10.17.5.30 jenkins.socialdevs.site
        10.17.5.30 nginx.socialdevs.site
        10.17.5.30 Longhorn.socialdevs.site

        fallthrough
    }

    forward . 8.8.8.8 8.8.4.4 {
        max_concurrent 1000
    }

    cache 30
    loop
    reload 5s
    loadbalance
    health {
        lameduck 5
    }

    prometheus :9153
    log
    errors
}
